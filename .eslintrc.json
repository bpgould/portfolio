{
    "env": {
        "es2021": true,
        "browser": true,
        "amd": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": 0, //added due to runtime errors preventing rendering in the browser
        "no-unused-vars": "off",
        "no-console": "off",
        "react/no-children-prop": 0
 
    }
}
